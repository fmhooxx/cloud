/**index.wxss**/
.swiper-box {
  height: 350rpx;
  background-color: #fff;
}
.image-wrapper {
  height: 100%;
  width: 660rpx;
  margin: auto;
  display: flex;
  align-items: center;
  justify-content: center;
}
.image-wrapper image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.guess {
}
.guess-title {
  margin: 10rpx 0;
  padding: 30rpx;
  background-color: #fff;
}

.guess-box {
  margin-top: 20rpx;
  padding: 0 20rpx;
}
.guess-list {
  display: flex;
  flex-wrap: wrap;
  align-content: center;
  justify-content: space-between;
}
.guess-item {
  background-color: #fff;
  width: 48%;
  padding-bottom: 20rpx;
  margin-bottom: 4%;
  border-radius: 10rpx;
}
.guess-item > image {
  width: 100%;
  height: 330rpx;
  border-radius: 10rpx;
}
.guess-item > view {
  margin: 0 0 10rpx 30rpx;
}
.guess-item > text {
  margin-left: 30rpx;
  color: red;
}