/* miniprogram/pages/details/details.wxss */
.swiper-box {
  width: 100%;
  height: 600rpx;
}

.swiper-box>swiper {
  height: 100%;
}

.swiper-box image {
  width: 100%;
  height: 100%;
}

.details {
  padding: 0 30rpx;
  background-color: #fff;
}

.details-title {
  font-size: 32rpx;
  color: #303133;
  height: 50rpx;
  line-height: 50rpx;
  margin: 10rpx 0;
}

.details-price {
  font-size: 26rpx;
  color: #fa436a;
  margin: 10rpx 0;
}

.details-price>text {
  font-size: 34rpx;
}

.details-box>view {
  color: #909399;
  font-size: 24rpx;
  padding-bottom: 10rpx;
}

.service {
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f8f8f8;
}

.service>view {
  flex: 1;
  color: #606266;
  font-size: 28rpx;
}

.service>text {
  flex: 4;
  color: #303133;
  font-size: 26rpx;
}

.footer {
  position: fixed;
  bottom: 60rpx;
  left: 50%;
  transform: translate(-50%);
  width: 690rpx;
  height: 100rpx;
  background-color: #fff;
  box-shadow: 0 0 20rpx 0 rgba(0, 0, 0, .5);
  border-radius: 16rpx;
}

.footer-box {
  height: 100%;
}

.footer-common {
  text-align: center;
  flex: 1;
}

.collection {
  color: #fa6c6a;
}

.footer-content {
  margin-right: 20rpx;
  justify-content: space-evenly;
  flex: 3;
  width: 340rpx;
  height: 76rpx;
  border-radius: 100rpx;
  font-size: 28rpx;
  background-color: #323f6c;
}

.footer-content>view {
  font-size: 28rpx;
  color: #fff;
}

.footer-content>text {
  height: 40%;
  border-left: 1rpx solid #fff;
}