<!-- miniprogram/pages/register/register.wxml -->
<view>
	<view class="head">注册账号</view>
	<view class="content">
		<view class="flex common">
			<text>账号</text>
			<input
			 type="text"
			 placeholder="请输入用户名"
			 placeholder-class="placeholder-common"
			 value="{{account}}"
			 bindinput="accountChange"
			/>
		</view>
		<view class="flex common">
			<text>密码</text>
			<input
			 type="text"
			 placeholder="请输入密码"
			 placeholder-class="placeholder-common"
			 value="{{pwd}}"
			 bindinput="pwdChange"
			 password="true"
			/>
		</view>
	</view>
	<view class="btn">
		<button bindtap="register">立即注册</button>
	</view>
	<view class="footer" bindtap="goUrl">已有账号, 去登陆</view>
</view>

